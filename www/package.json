{
  "name": "create-cwf-app",
  "version": "0.1.0",
  "description": "Web framework based on CSS syntax",
  "main": "index.js",
  "license": "MIT",
  "bin": {
    "create-wasm-app": ".bin/create-cwf-app.js"
  },
  "scripts": {
    "start": "run-p -n --aggregate-output serve rustwatch",
    "serve": "webpack-dev-server --open",
    "rustwatch": "onchange -ik ../cwf -- wasm-pack build",
    "build": "npm run clean && webpack --config webpack.config.js",
    "clean": "rm -f package-lock.json && rm -rf node_modules && rm -f ../Cargo.lock && rm -rf ../pkg && rm -rf ../target && wasm-pack build && npm install && npm audit fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thisminute/cwf.git"
  },
  "keywords": [
    "webassembly",
    "wasm",
    "rust",
    "webpack"
  ],
  "dependencies": {
    "cwf-rust": "file:../pkg"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
